# -----------------------------------------------------------------------------
# Core PostgreSQL configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST_AUTH_METHOD=trust

# -----------------------------------------------------------------------------
# Database names used by the microservices and automation tooling
# -----------------------------------------------------------------------------
CHATBOT_DB=chatbot_db
USER_DB=user_db
N8N_DB=n8n_db

# -----------------------------------------------------------------------------
# SQLAlchemy / psycopg connection strings used by backend services
# -----------------------------------------------------------------------------
CHAT_SERVICE_DATABASE_URL=postgresql+psycopg://postgres:postgres@pgvector:5432/${CHATBOT_DB}
USER_SERVICE_DATABASE_URL=postgresql+psycopg://postgres:postgres@pgvector:5432/${USER_DB}

# -----------------------------------------------------------------------------
# Service-specific configuration
# -----------------------------------------------------------------------------
CHAT_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
GATEWAY_PORT=2323
FRONTEND_INTERNAL_PORT=8080

# Base URL for inter-service calls
GATEWAY_BASE_URL=http://gateway:${GATEWAY_PORT}
PUBLIC_GATEWAY_URL=http://localhost:${GATEWAY_PORT}
N8N_WEBHOOK_BASE_URL=http://n8n:5678
OLLAMA_BASE_URL=http://ollama-gpu:11434

# -----------------------------------------------------------------------------
# n8n configuration
# -----------------------------------------------------------------------------
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=
N8N_TIMEZONE=Asia/Jakarta
N8N_EDITOR_BASE_URL=http://localhost:5678
N8N_HOST=n8n.local

# -----------------------------------------------------------------------------
# FastAPI specific options (optional overrides)
# -----------------------------------------------------------------------------
UVICORN_RELOAD=true
UVICORN_WORKERS=1

# -----------------------------------------------------------------------------
# Frontend build-time configuration for the PWA
# -----------------------------------------------------------------------------
VITE_GATEWAY_URL=${PUBLIC_GATEWAY_URL}

# -----------------------------------------------------------------------------
# Ollama GPU configuration
# -----------------------------------------------------------------------------
OLLAMA_MODELS=llama3
